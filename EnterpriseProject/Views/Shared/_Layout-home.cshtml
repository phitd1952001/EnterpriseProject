@using Microsoft.AspNetCore.Mvc.TagHelpers
@using EnterpriseProject.Utility
@using OfficeOpenXml.FormulaParsing.Excel.Functions.DateTime
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - EnterpriseProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
     <link rel="stylesheet" href="~/css/Home-page/footer.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="margin-bottom: 0">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container">
            <a class="navbar-brand" asp-area="UnAuthenticated" asp-controller="Home" asp-action="Index">EnterpriseProject</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-area="UnAuthenticated" asp-controller="Home" asp-action="Index" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Home
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <ul class="list-unstyled">
                                    <li>
                                        <a class="dropdown-item" asp-area="Authenticated" asp-controller="UsersManagement" asp-action="index">UsersManagement</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Authenticated" asp-controller="Department" asp-action="index">Department</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Authenticated" asp-controller="Categories" asp-action="index">Category</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Authenticated" asp-controller="Topics" asp-action="index">Topics</a>
                                    </li>
                                </ul>
                            </div>
                             
                        </li>
                    }
                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager) || User.IsInRole(SD.Role_Staff) || User.IsInRole(SD.Role_Coordinator))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Topics" asp-action="index">Topics</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Statistics" asp-action="index">Statistics</a>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div >
    </nav>
</header>
<div>
    <main role="main">
        @RenderBody()
    </main>
</div>
<footer style="padding: 0">
    <div class="container">
    <div class="row">
        <div class="col">
            <h3>Contact us</h3>
            <p>Hotline: 086.779.1686</p>
            <p>Email: info@greenwich.edu.vn</p>
        </div>
        <div class="col">
            <h3>Ho Chi Minh Facility</h3>
            <p>Phone: 028.7300.2266</p>
            <p>Address: 20 Cong Hoa Street Tan Binh District</p>
        </div>
        <div class="col">
            <h3>Social networking sites</h3>
            <div class="social-links ">
                <a href=https://www.facebook.com/GreenwichVietnam/?utm_source=google&utm_medium=search&utm_campaign=brand_greenwich&utm_term=greenwich_vietnam><i class="fab fa-facebook"></i></a>
                <a href="https://twitter.com/UniofGreenwich"><i class="fab fa-twitter"></i></a>
                <a href="https://www.linkedin.com/school/university-of-greenwich/"><i class="fab fa-linkedin"></i></a>
                <a href="https://www.youtube.com/user/UniversityGreenwich"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </div>
    </div>
    <div class="copy">
        <p>&copy; @DateTime.Now.Year Greenwich.edu.vn. All rights reserved.</p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>