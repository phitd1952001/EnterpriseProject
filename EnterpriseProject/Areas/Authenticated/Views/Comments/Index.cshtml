@using EnterpriseProject.Utility
@using System.Security.Claims
@model EnterpriseProject.ViewModels.CommentVM

@{
    Layout = "_Layout";
    <link rel="stylesheet" href="~/css/Comments/Create.css"/>
    <link rel="stylesheet" href="~/css/Comments/BackToList.css"/>
}

<div class="row">
    <div class="col-4">
        <h1>Comments Table</h1>
    </div>
    <div class="col-8">
        <button type="button" onclick="goBack()" class="btn button-back">Back To The Ideas Page</button>
        <form class="form-inline my-2 my-lg-0 float-right">
            <input id="myInput" class="form-control mr-sm-2" type="text" placeholder="Search">
        </form>
    </div>
</div>

<table class="table">
  <thead class="thead-light">
  <tr>
      <th scope="col">Text</th>
      <th scope="col">File Path</th>
      <th scope="col">Topic</th>
      <th scope="col">Category</th>
      <th scope="col">Author</th>
      <th scope="col">Views</th>
  </tr>
  </thead>
  <tbody>
  <tr>
      <td>@Model.Idea.Text</td>
      <td>@Model.FileName</td>
      <td>@Model.Idea.Topic.Name</td>
      <td>@Model.Idea.Category.Name</td>
      @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
      {
          <td>@Model.Idea.ApplicationUser.FullName</td>
      }
      else
      {
          <td>anynomous</td>
      }
      <td>@Model.View</td>
  </tr>
  </tbody>
</table>
<br/>
<iframe src="@Url.Action("Preview", "Ideas", new { id = Model.Idea.FileId })" width="100%" height="600"></iframe>
<br/>
<form method="post" asp-action="AddComment">
    <input asp-for="IdeaId" class="form-control" hidden>
    <div class="mb-3 d-flex col-12">
        <input asp-for="Text" class="form-control m-1 col-10" placeholder="Enter your comment">
        <button type="submit" class="btn button-create m-1 col-2"><i class="fa fa-paper-plane"></i> Comment</button>
    </div>
</form>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Text</th>
        <th scope="col">User</th>
        <th scope="col">Datetime</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody id="tblData">

    @foreach (var obj in @Model.Comments)
    {
        <tr>
            <th scope="row">@obj.Id</th>
            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
            {
                <td>@obj.ApplicationUser.FullName</td>
            }
            else
            {
                <td>anynomous</td>
            }
            <td>@obj.Text</td>
            <td>@obj.DateTime</td>
            <td>
                @{
                    var claimsIdentity = (ClaimsIdentity)User.Identity;
                    var claims = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier);
                }
                @if (obj.UserId == claims.Value)
                {
                    <a asp-controller="Comments" asp-action="UpDate" asp-route-id="@obj.Id" style="color: #FFD700; font-size: 25px" class="btn-outline"><i class="fa-solid fa-pen-to-square"></i></a>
                }
                @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Manager))
                {
                    <a asp-controller="Comments" asp-action="Delete" asp-route-id="@obj.Id" style="color: #c82333; font-size: 25px" class="btn-outline"><i class="fa-solid fa-trash-can"></i></a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script>
         $(document).ready(function (){
             $("#myInput").on("keyup", function(){
              var value = $(this).val().toLowerCase();
             $("#tblData tr").filter(function (){
                 $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
             });
         });
     });
     function goBack(){
         window.history.back();
     }  
  </script>
}